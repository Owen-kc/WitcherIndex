<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/witcherfont"
    android:orientation="vertical"
    tools:context=".Index">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="450dp"
                android:layout_height="307dp"
                android:layout_gravity="top"
                android:background="#C3C0C0"
                android:clickable="false"
                android:contentDescription="Geralt and Jaskier"
                android:fontFamily="@font/witcherfont"
                app:srcCompat="@drawable/indeximage" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/witcherfont"
                android:text="Introduction"
                android:textAlignment="center"
                android:textColor="#802020"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/home_info"
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:background="#C3C0C0"
                android:fontFamily="@font/witcherfont"
                android:text="@string/home_info"
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/witcherQuestion"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/witcherfont"
                android:text="What is a Witcher?"
                android:textAlignment="center"
                android:textColor="#802020"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="339dp"
                android:background="#C3C0C0"
                android:contentDescription="Henry Cavill as Geralt"
                android:padding="10px"
                app:srcCompat="@drawable/witcher" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:background="#C3C0C0"
                android:fontFamily="@font/witcherfont"
                android:text="@string/witcher_info"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/witcherfont"
                android:text="The World of The Witcher"
                android:textAlignment="center"
                android:textColor="#802020"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/world1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/world1" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goChangeVector"
                android:text="Cycle Images" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:background="#C3C0C0"
                android:fontFamily="@font/witcherfont"
                android:text="@string/world_info"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>