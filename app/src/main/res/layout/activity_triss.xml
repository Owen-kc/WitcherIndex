<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Triss">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/witcherfont"
                android:text="Triss Merigold"
                android:textAlignment="center"
                android:textColor="#802020"
                android:textSize="25sp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/witcherfont"
                android:scaleType="fitXY"
                android:src="@drawable/triss" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/witcherfont"
                android:text="Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#802020"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/geraltinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C3C0C0"
                android:fontFamily="@font/witcherfont"
                android:text="@string/triss_info"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/witcherfont"
                android:lineSpacingExtra="20sp"
                android:text="Detailed Information"
                android:textAlignment="center"
                android:textColor="#802020"
                android:textSize="20sp" />

            <Button
                android:id="@+id/hideVernon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goHide"
                android:text="Hide" />

            <Button
                android:id="@+id/showVernon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goShow"
                android:text="Show" />

            <ImageView
                android:id="@+id/vilgefortzinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/trissinfoss" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/witcherfont"
                android:text="Who would win in a fight?"
                android:textAlignment="center"
                android:textColor="#802020" />

            <RadioGroup
                android:id="@+id/trissRadio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C3C0C0">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#802020"
                    android:text="Yennefer"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#802020"
                    android:text="Triss"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>
</LinearLayout>